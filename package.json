{
  "name": "dynamic-orm-database",
  "version": "1.0.0",
  "description": "Dynamic ORM database system.",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "cross-env NODE_ENV=development nodemon",
    "debug": "cross-env NODE_ENV=development DEBUG=express:* nodemon",
    "build": "tsc --build",
    "test": "cross-env NODE_ENV=test jest -c ./jest.unit.json",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage -c ./jest.unit.json",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JSCode-es/dynamic-orm-database.git"
  },
  "keywords": [],
  "author": "Sergio Gonz√°lez Garrido <sgonzalez@jscode.es> (https://jscode.es)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JSCode-es/dynamic-orm-database/issues"
  },
  "homepage": "https://github.com/JSCode-es/dynamic-orm-database#readme",
  "eslintConfig": {
    "env": {
      "jest": true
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  },
  "nodemonConfig": {
    "watch": [
      "src/**/*"
    ],
    "ext": "ts",
    "exec": "npm run build && node ./dist/index.js",
    "verbose": false,
    "legacyWatch": true
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "devDependencies": {
    "@types/jest": "26.0.24",
    "@types/joi": "17.2.3",
    "@types/node": "16.3.2",
    "cross-env": "7.0.3",
    "dotenv": "10.0.0",
    "husky": "^7.0.1",
    "jest": "27.0.6",
    "lint-staged": "^11.0.1",
    "nodemon": "2.0.7",
    "ts-jest": "27.0.3",
    "ts-node": "10.1.0",
    "typescript": "4.3.3"
  },
  "dependencies": {
    "joi": "17.4.0",
    "promise-mysql": "5.0.3"
  },
  "files": [
    "dist",
    "index.d.ts",
    "index.js.flow",
    "package.json",
    "README.md"
  ]
}