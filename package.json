  "eslintConfig": {
    "env": {
      "jest": true,
      "cypress/globals": true,
      "window": true
    },
    "plugins": [
      "cypress"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src/**/*",
      "public/.src/**/*"
    ],
    "ext": "pug,ts,scss,json",
    "exec": "node ./build.js && npm run build && node ./dist/server.js",
    "verbose": false,
    "legacyWatch": true
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "devDependencies": {
    "@types/jest": "26.0.24",
    "@types/joi": "17.2.3",
    "@types/node": "16.3.2",
    "cross-env": "7.0.3",
    "jest": "27.0.6",
    "nodemon": "2.0.7",
    "ts-jest": "27.0.3",
    "ts-node": "10.1.0",
    "typescript": "4.3.3",
    "dotenv": "10.0.0"
  },
  "dependencies": {
    "joi": "17.4.0",
    "promise-mysql": "5.0.3"
